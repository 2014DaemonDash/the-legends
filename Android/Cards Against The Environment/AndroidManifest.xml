<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardsagainsttheenvironment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cardsagainsttheenvironment.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.LauncherActivity"
            android:label="@string/title_activity_launcher" >
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.RoomsActivity"
            android:label="@string/title_activity_rooms" >
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.AddRoomActivity"
            android:label="@string/title_activity_add_room" >
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.RoomViewActivity"
            android:label="@string/title_activity_room_view" >
        </activity>
        <activity
            android:name="com.example.cardsagainsttheenvironment.PickWhiteActivity"
            android:label="@string/title_activity_pick_white" >
        </activity>
    </application>

</manifest>
